{
  "name": "lhtml",
  "productName": "LHTML",
  "version": "0.4.0",
  "main": "main.js",
  "description": "LHTML Viewer",
  "author": {
    "name": "Matt Haggard",
    "email": "haggardii@gmail.com"
  },
  "scripts": {
    "test": "mocha",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps"
  },
  "devDependencies": {
    "electron-builder": "^12.3.1",
    "electron-packager": "^8.5.0",
    "electron": "^1.4.15",
    "esdoc": "^0.5.2",
    "http-server": "^0.9.0",
    "mocha": "^3.2.0",
    "spectron": "^3.4.1"
  },
  "dependencies": {
    "adm-zip": "^0.4.7",
    "electron-log": "^1.3.0",
    "electron-updater": "^1.3.2",
    "fs-extra": "^2.0.0",
    "klaw": "^1.3.1",
    "lodash": "^4.17.4",
    "tmp": "0.0.31"
  },
  "build": {
    "appId": "com.github.iffy.lhtml",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "fileAssociations": [
      {
        "ext": "lhtml",
        "role": "Editor"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "deb",
        "tar.gz"
      ]
    },
    "nsis": {
      "perMachine": true
    }
  }
}
